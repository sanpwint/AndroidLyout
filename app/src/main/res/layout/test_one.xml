<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#40ff"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="358dp"
        android:layout_height="417dp"
        android:layout_marginTop="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/nature"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="358dp"
        android:layout_height="427dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/for_test_one"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MY LOVE,"
        android:textSize="22dp"
        android:textColor="#124"
        app:layout_constraintTop_toTopOf="@id/textView1"
        app:layout_constraintLeft_toLeftOf="@+id/textView1"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="YOU LIKE A FLOWER"
        android:textColor="#124"
        android:textSize="22dp"
        app:layout_constraintTop_toTopOf="@id/textView1"
        app:layout_constraintLeft_toLeftOf="@+id/textView1"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="20dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*Editor's Choice"
        android:textColor="#ff8000"
        android:textSize="14dp"
        app:layout_constraintTop_toTopOf="@id/textView1"
        app:layout_constraintLeft_toLeftOf="@+id/textView1"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="20dp"
        />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="289dp"
        android:layout_height="220dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="130dp"
        android:text="We're all a little weird.And life is a little weird.And when we find someone whose weirdness is compatible with ours we join wp with them and fail into mutually satisfying weirdness-and call it love-true love.
love-true love."
        android:textColor="#124"
        android:textSize="18dp"
        app:layout_constraintLeft_toLeftOf="@+id/textView1"
        app:layout_constraintTop_toTopOf="@id/textView1" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="And in this crazy life and through these"
        android:textColor="#124"
        android:textSize="17dp"
        app:layout_constraintTop_toTopOf="@id/textView1"
        app:layout_constraintLeft_toLeftOf="@+id/textView1"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="20dp"
        />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$"
        android:textSize="20dp"
        android:textColor="#124"
        app:layout_constraintTop_toTopOf="@id/textView1"
        app:layout_constraintLeft_toLeftOf="@+id/textView1"
        android:layout_marginTop="370dp"
        android:layout_marginLeft="20dp"
        />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="99.9"
        android:textSize="30dp"
        android:textColor="#124"
        app:layout_constraintTop_toTopOf="@id/textView1"
        app:layout_constraintLeft_toLeftOf="@+id/textView6"
        app:layout_constraintBaseline_toBaselineOf="@id/textView6"
        android:layout_marginLeft="20dp"
        />

    <Button
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/color"
        android:text="Order now"
        app:layout_constraintLeft_toLeftOf="@id/textView1"
        app:layout_constraintTop_toBottomOf="@id/textView4" />

</androidx.constraintlayout.widget.ConstraintLayout>