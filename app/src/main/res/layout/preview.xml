<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/image"
        android:layout_width="180dp"
        android:layout_height="190dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/john_mcdonald"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewH" />
    <TextView
        android:id="@+id/textViewH"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text=" <--                                                   :"
        android:textSize="27dp"
        android:textColor="#ffff"
        android:background="@drawable/color_mcdonald"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <TextView
        android:id="@+id/textViewN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="John McDonald"
        android:textSize="30dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewH"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*Los Angles,CA"
        android:textSize="20dp"
        android:textColor="#1a0000"
        android:layout_marginLeft="50dp"
        app:layout_constraintTop_toBottomOf="@id/textViewN"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <Button
        android:id="@+id/follow"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="170dp"
        android:background="@drawable/color_mcdonald1"
        android:text="Follow"
        android:textColor="#ffffff"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewH" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="34"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/follow"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1350"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/follow"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Posts"
        android:textSize="17dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/follow"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Followers"
        android:textSize="17dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/follow"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <ImageView
        android:id="@+id/pic1"
        android:layout_width="75dp"
        android:layout_height="157dp"
        android:layout_marginTop="280dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/md1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewH" />

    <ImageView
        android:id="@+id/pic2"
        android:layout_width="75dp"
        android:layout_height="157dp"
        android:layout_marginTop="280dp"
        android:src="@drawable/md2"
        app:layout_constraintLeft_toRightOf="@id/pic1"
        app:layout_constraintTop_toBottomOf="@id/textViewH"

        />

    <ImageView
        android:id="@+id/pic3"
        android:layout_width="75dp"
        android:layout_height="157dp"
        android:layout_marginTop="280dp"
        android:src="@drawable/md1"
        app:layout_constraintLeft_toRightOf="@id/pic2"
        app:layout_constraintTop_toBottomOf="@id/textViewH" />

    <ImageView
        android:id="@+id/pic4"
        android:layout_width="75dp"
        android:layout_height="157dp"
        android:layout_marginTop="280dp"
        android:src="@drawable/md2"
        app:layout_constraintLeft_toRightOf="@id/pic3"
        app:layout_constraintTop_toBottomOf="@id/textViewH" />

    <ImageView
        android:id="@+id/pic5"
        android:layout_width="75dp"
        android:layout_height="157dp"
        android:layout_marginTop="280dp"
        android:layout_marginRight="40dp"
        android:src="@drawable/md1"
        app:layout_constraintLeft_toRightOf="@id/pic4"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewH" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="405dp"
        android:layout_height="104dp"
        android:layout_marginTop="436dp"
        android:src="@drawable/logo"
        app:layout_constraintTop_toBottomOf="@id/textViewH"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ABOUT"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@+id/logo"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:layout_width="381dp"
        android:layout_height="135dp"
        android:layout_marginLeft="20dp"
        android:text="Him poetic eye. Searched any remedies.
Trial. Was poverty a schemes him he
dressinf mountains and as surprise haven't subject and could a entered would
in the of be not posts,doing the never publication legs."
        android:textColor="#123"
        android:textSize="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/about" />

</androidx.constraintlayout.widget.ConstraintLayout>